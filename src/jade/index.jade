doctype html
html
  head
    title Leap Music
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='description', content='Leap Music')
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    if develop
      link(href="css/app.css", type="text/css", rel="stylesheet")
    else
      link(href="css/app-#{version}.min.css", type="text/css", rel="stylesheet")
  body
    .wrapper
      .container
        h3 Leap DJ

        p Hello! This is a web application for manipulating music with a leap motion. Plug in your device and make sure the software is running! <br> Move your hands around over the Leap. Instructions: ...
        .btns
          button#btn(onclick='sound.toggle()') start/stop

        .checkboxes
          input#enable-volume(type='checkbox', name='volume', value='enabled', onclick='sound.toggleVolume(this)', checked)
          input#enable-filter(type='checkbox', name='volume', value='enabled', onclick='sound.toggleFilter(this)', checked)
        .sliders
          input#volume-slider(type='range', min='0', max='200', value='200', orient='vertical', oninput='sound.changeVolume(this, 0)')
          input#filter-slider(type='range', min='0', max='200', value='200', orient='vertical', oninput='sound.changeFrequency(this, 0)')
          input#filter-q-slider(type='range', min='0', max='200', value='100', orient='vertical', oninput='sound.changeQuality(this, 0)')
        .crossfade
          //- input#crossfade-slider(type='range', min='0', max='200', value='100', oninput='sound.crossFade(this, 0)')

        .outputCon
          #output
    if develop
      each jsFile in jsLibFiles
        script(src="js/#{jsFile}")

    each jsFile in jsFiles
      script(src="js/#{jsFile}")
    //- script(src='//js.leapmotion.com/leap-plugins-0.1.11.min.js')

    if develop
      script(src="//localhost:9001/livereload.js")
