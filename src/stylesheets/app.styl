@import reset
@import responsive-mixins
// @import range

body
  background-color #eee
  overflow-y scroll
  font-family Roboto
  
.wrapper
  position absolute;
  width 100%
  
.container
  text-align left
  max-width 800px
  margin 5%
  display inline-block
    
h3
  font-weight bold
  font-size 30px
p
  padding-top 20px

.square
  left 100px
  position absolute
  width 100px
  height 100px

.crossfade input
  width 200px
  height 8px

.sliders, .crossfade
  opacity:0.9
  text-align center
  
.sliders input
  writing-mode bt-lr /* IE */
  -webkit-appearance slider-vertical /* WebKit */
  height 300px
//   margin 2% 50px 2% 0

.crossfade input
  margin 40px;
  width 300px

.btns
  margin-top 15px
  
.checkboxes input
  width 20px
  margin 2% 82px 2% 0
  
canvas
  pointer-events none
  width 1080px !important
  
#connect-leap
  width 1080px !important
  position absolute
  top 0px
  left 0px
  padding 10px
  text-align center 
  font-size 18px
  opacity 0.8
  display none
  z-index 10
  cursor pointer
  
img.playback-move-hand
  display none

  


